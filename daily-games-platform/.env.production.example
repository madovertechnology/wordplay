# Production Environment Configuration
APP_NAME="Daily Games Platform"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-domain.com
APP_TIMEZONE=UTC

# Localization
APP_LOCALE=en
APP_FALLBACK_LOCALE=en

# PHP Configuration
BCRYPT_ROUNDS=12

# Logging Configuration
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=error
LOG_DEPRECATIONS_CHANNEL=null

# Database Configuration (Laravel Cloud managed)
DB_CONNECTION=pgsql
DB_SSLMODE=require
DB_TIMEOUT=30
DB_PERSISTENT=false

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.your-domain.com
SESSION_SECURE_COOKIES=true
SESSION_SAME_SITE=strict

# Broadcasting
BROADCAST_CONNECTION=redis

# File Storage
FILESYSTEM_DISK=s3

# Queue Configuration
QUEUE_CONNECTION=redis
QUEUE_FAILED_DRIVER=database

# Cache Configuration
CACHE_STORE=redis
CACHE_PREFIX=dgp-prod
CACHE_TTL=3600

# Redis Configuration (Laravel Cloud managed)
REDIS_CLIENT=phpredis
REDIS_PREFIX=daily-games-platform-prod

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=daily-games-platform-prod
AWS_USE_PATH_STYLE_ENDPOINT=false

# Frontend Build
VITE_APP_NAME="${APP_NAME}"

# Social Authentication
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI="${APP_URL}/auth/google/callback"

# Security Configuration
SANCTUM_STATEFUL_DOMAINS=your-domain.com
SANCTUM_GUARD=web

# Rate Limiting
RATE_LIMIT_API=60
RATE_LIMIT_AUTH=5
RATE_LIMIT_GAME=30

# Game Configuration
WORD_SCRAMBLE_LETTERS_COUNT=7
WORD_SCRAMBLE_MIN_WORD_LENGTH=3
DICTIONARY_CACHE_TTL=86400

# Performance Monitoring
SLOW_QUERY_THRESHOLD=1000
ENABLE_QUERY_LOGGING=false

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_ALERT_THRESHOLD=1000

# Monitoring and Analytics
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# SSL Configuration
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000